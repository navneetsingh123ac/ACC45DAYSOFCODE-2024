#include <bits/stdc++.h>
using namespace std;

int main() {
	int t;
	cin>>t;
	for(int i = 0; i<t; i++){
	    int n, x;
	    int ans = 0;
	    cin>>n>>x;
	    if(n % 6 == 0){
	        ans = (n/6) * x;
	        cout<<ans<<endl;
	    }
	    else{
	        ans = ((n/6) + 1) * x;
	        cout<<ans<<endl;
	    }
	}

}
